    </div> -->
    <!-- 
    <div>
        <ul>
            <% posts.forEach(post=> { %>
                <li>
                    <h2>
                        <%= post.title %>
                    </h2>
                    <p>By <%= post.author %> on <%= post.date %>
                    </p>
                    <% if (post.reactions> 10) { %>
                        <p>This post is popular!</p>
                        <% } else { %>
                            <p>This post has fewer reactions.</p>
                            <% } %>
                </li>
                <% }) %>
        </ul>
    </div> -->

    <div>

        <h1>Selamat Datang di Halaman Utama!</h1>
        <ul>
            <% posts.forEach(post=> { %>
                <li>
                    <h2>
                        <%= post.title %>
                    </h2>
                    <p>By <%= post.author %> on <%= post.date %>
                    </p>
                    <% if (post.reactions> 50) { %>
                        <p>This post is very popular!</p>
                        <% } else if (post.reactions> 20) { %>
                            <p>This post is popular!</p>
                            <% } else { %>
                                <p>This post has fewer reactions.</p>
                                <% } %>
                </li>
                <% }) %>
        </ul>


    </div>

</body>

</html>
</body>

</html>


